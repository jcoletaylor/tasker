# Prometheus configuration for Tasker Application: <%= app_name %>
# Generated by Tasker Demo Application Builder v2.6.0

global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  # - "first_rules.yml"
  # - "second_rules.yml"

scrape_configs:
  # Prometheus itself
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  # Tasker application metrics
  - job_name: 'tasker-app'
    static_configs:
      - targets: ['app:3000']
    metrics_path: '/tasker/metrics'
    scrape_interval: 30s
    scrape_timeout: 10s
    
