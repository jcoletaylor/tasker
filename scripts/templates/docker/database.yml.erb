# Database configuration for Docker-based Tasker Application: <%= app_name %>
# Generated by Tasker Demo Application Builder v2.6.1

default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  timeout: 5000
  # Use Docker service networking
  host: postgres
  port: 5432
  username: tasker
  password: tasker

development:
  <<: *default
  database: <%= app_name.underscore %>_development

test:
  <<: *default
  database: <%= app_name.underscore %>_test

production:
  <<: *default
  database: <%= app_name.underscore %>_production
  username: <%= ENV['DATABASE_USERNAME'] || 'tasker' %>
  password: <%= ENV['DATABASE_PASSWORD'] || 'tasker' %>
  host: <%= ENV['DATABASE_HOST'] || 'postgres' %>
  port: <%= ENV['DATABASE_PORT'] || 5432 %>